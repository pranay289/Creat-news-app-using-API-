<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="300dp" android:layout_margin="16dp" android:elevation="6dp">
    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/postimg" android:layout_width="match_parent" android:layout_height="180dp" android:scaleType="center" android:adjustViewBounds="true"/>
        <TextView android:ellipsize="end" android:id="@+id/posttitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:maxLines="1" style="@style/TextAppearance.AppCompat.Title"/>
        <TextView android:ellipsize="end" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:maxLines="2" style="@style/TextAppearance.AppCompat.Body2"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
